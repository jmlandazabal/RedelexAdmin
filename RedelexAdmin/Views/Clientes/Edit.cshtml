@model RedelexDTO.ClienteDetalleInfo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Modificar Cliente</h4>
            </div> 
                
            <div class="card-block">
                @using (Html.BeginForm(new { htmlAttributes = new { @class = "form-horizontal" } }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <h3 class="card-title">Informacion Personal</h3>
                        <hr>
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CuentaId,"Cuenta:", new { htmlAttributes = new { @class = "control-label" } })
                                        @Html.EditorFor(model => model.CuentaId, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                        @Html.ValidationMessageFor(model => model.CuentaId,"*", new { htmlAttributes = new { @class = "form-control-feedback"} },"small")
                                        
                                    </div>
                                    

                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NombreCuenta, "Nombre:" ,new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.NombreCuenta, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.NombreCuenta, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")
                                    </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bt-switch">
                                    @Html.LabelFor(model => model.Activo, "Cuenta Activa:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "checkbox", @type = "checkbox" } })
                                    @Html.ValidationMessageFor(model => model.Activo, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")

                                   
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RepositorioDocumentos, "Repositorio Documentos:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.RepositorioDocumentos, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.RepositorioDocumentos, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")

                                    </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <h3 class="box-title m-t-40">Licencia</h3>
                        <hr>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.TipoLicenciaId, "Contrato:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.DropDownListFor(model => model.LicenciaInfo.TipoLicenciaId,Enumerable.Empty<SelectListItem>() )
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.TipoLicenciaId, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.MaximoProcesos, "Maximo Procesos:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.MaximoProcesos, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.MaximoProcesos, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.FechaExpiracion,"Fecha Vencimiento", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.FechaExpiracion, new { htmlAttributes = new { @class = "form-control", @type = "date", Value = Model.LicenciaInfo.FechaExpiracionString } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.FechaExpiracion, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")
                                    </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.MaximoUsuarios, "Maximo Usuarios:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.MaximoUsuarios, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.MaximoUsuarios, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.MaximoEspacioDisco, "Maximo Espacio en Disco (GB):", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.MaximoEspacioDisco, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.MaximoEspacioDisco, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.VJConnectMaximoProcesos, "VJ-Connect Máximo Vínclos:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.VJConnectMaximoProcesos, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.VJConnectMaximoProcesos, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LicenciaInfo.LicenseKey, "Licencia #:", new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.LicenciaInfo.LicenseKey, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    @Html.ValidationMessageFor(model => model.LicenciaInfo.LicenseKey, "*", new { htmlAttributes = new { @class = "form-control-feedback" } }, "small")


                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div class="form-actions">
                        <button class="btn btn-success" type="submit"> <i class="fa fa-check"></i> Save</button>
                        <button class="btn btn-inverse" type="button">Cancel</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".bt-switch input[type='checkbox'], .bt-switch input[type='radio']").bootstrapSwitch();
    var radioswitch = function() {
        var bt = function() {
            $(".radio-switch").on("switch-change", function() {
                $(".radio-switch").bootstrapSwitch("toggleRadioState")
            }), $(".radio-switch").on("switch-change", function() {
                $(".radio-switch").bootstrapSwitch("toggleRadioStateAllowUncheck")
            }), $(".radio-switch").on("switch-change", function() {
                $(".radio-switch").bootstrapSwitch("toggleRadioStateAllowUncheck", !1)
            })
        };
        return {
            init: function() {
                bt()
            }
        }
    }();
    $(document).ready(function() {
        radioswitch.init()
    });


    $(function () {
        $.getJSON('@Url.Content("~/Clientes/Licencias")', function (result) {
            var ddl = $('#LicenciaInfo_TipoLicenciaId');
            ddl.empty();
            ddl.addClass("form-control custom-select")
            $(result).each(function () {
                $(document.createElement('option'))
                    .attr('value', this.Id)
                    .text(this.Value)
                    .appendTo(ddl);
            });
            ddl.val('@Model.LicenciaInfo.TipoLicenciaId');
        });
    });
</script>